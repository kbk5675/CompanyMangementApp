<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A2CDA9"
    android:orientation="vertical"
    tools:context=".ClientActivity">



    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/stroke_black"
        android:gravity="center"
        android:text="고객관리 화면"
        android:textSize="50sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/LinearLayout_list_client"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:orientation="vertical">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/list_clients"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/stroke_black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/stroke_black"

        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_clt_add"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbutton"
            android:text="추가"
            android:textSize="24sp" />

        <View
            android:id="@+id/view2"
            android:layout_width="50dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_clt_back"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@drawable/mainbutton"
            android:text="나가기"
            android:textSize="24sp" />
    </LinearLayout>
</LinearLayout>