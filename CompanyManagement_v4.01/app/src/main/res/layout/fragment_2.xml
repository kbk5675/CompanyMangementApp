<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="420dp"
    android:background="#A2CDA9"
    android:orientation="vertical"
    tools:context=".Fragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            app:srcCompat="@drawable/hanger2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name_item"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_black"
                android:gravity="center"
                android:text="상품명"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view3"
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/name_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="기본 옷걸이 2호"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/price_item"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_black"
                android:gravity="center"
                android:text="가 격"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view4"
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/price_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2000원"
                android:textSize="30sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/stroke_black"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/material_item"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/stroke_black"
                android:gravity="center"
                android:text="소 재"
                android:textSize="30sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/view5"
                android:layout_width="10dp"
                android:layout_height="30dp" />

            <TextView
                android:id="@+id/material_item2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="목재"
                android:textSize="30sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>